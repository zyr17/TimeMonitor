<Window x:Class="TimeMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="GetForegroundWindow" Height="200" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click"/>
            <Button Grid.Column="1" Content="MouseKeyboardHook" Height="200" Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Button_Click_1"/>
            <Button Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_2"/>
        </Grid>
    </Grid>
</Window>
